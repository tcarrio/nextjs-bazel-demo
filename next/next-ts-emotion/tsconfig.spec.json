{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "composite": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.d.ts"
  ]
}
